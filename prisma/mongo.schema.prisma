generator client {
  provider = "prisma-client-js"
  output   = "./node_modules/.prisma/mongo-client"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGO_DATABASE_URL")
}

enum EVENT_ENUM {
  CLICK
  SCROLL
  EXIT
}

model Tracking {
  trackId String     @id @db.ObjectId @map("_id")
  userId  String     @db.String
  event   EVENT_ENUM
}
